    <sql id ="Base_Shop_Goods_List">
        select
            s.id,
            s.user_id,
            s.goods_id,
            s.number,
            g.id,
            g.title,
            sum(g.price) as price
            g.remark,
            g.avatar,
            g.deleted,
            g.typer,
            g.opener,
            g.run_price,
            g.water_num,
            g.min_num,
            g.max_num,
            g.good_sex,
            g.get_type
        from shop s left join ft_goods g on s.goods_id = g.id
