            </if>
        </set>
        where id = #{id}
    </update>

    <update id="updateByPrimaryKey" parameterType="com.ruoyi.system.domain.FtOrder">
        <!--@mbg.generated-->
        update ft_order
        set address_id = #{addressId,jdbcType=BIGINT},
            home_id    = #{homeId,jdbcType=BIGINT},
            payed     = #{payed,jdbcType=BOOLEAN},
            status    = #{status,jdbcType=INTEGER}
            pay_method = #{payMethod,jdbcType=VARCHAR}
        where id = #{id}
    </update>

    <select id="selectList" resultMap="BaseResultMap">
        <include refid="Base_Column_Goods_HOME_User_List"/>
        where fo.deleted = 0
          and fg.deleted = 0
          and fu.del_flag = 0
        <if test="order.keyword != null and order.keyword != ''">
            and (
                    fg.title like concat('%', #{order.keyword}, '%')
                    or fu.user_name like concat('%', #{order.keyword}, '%')
                    or fu.phonenumber = #{order.keyword}
                )
        </if>

        <if test="order.addressId != null">
            and a.id = #{order.addressId}
        </if>

        <if test="order.userId != null">
            and fo.user_id = #{order.userId}
        </if>

        <if test="order.status != null">
            and fo.status = #{order.status}
        </if>
        order by fo.id desc
    </select>

    <select id="createOrderCQ" resultType="com.ruoyi.system.response.CQ">
        SELECT f.id, f.user_id userId,f.home_id homeId,o.number, o.goods_id goodId from ft_order f join order_elements o on f.id = o.order_id
        where f.id = #{orderId}
    </select>
