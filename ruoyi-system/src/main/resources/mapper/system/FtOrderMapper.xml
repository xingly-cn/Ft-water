    <update id="updateByPrimaryKeySelective" parameterType="com.ruoyi.system.domain.FtOrder">
        <!--@mbg.generated-->
        update ft_order
        <set>
            <if test="addressId != null">
                address_id = #{addressId,jdbcType=BIGINT},
            </if>
            <if test="homeId != null">
                home_id = #{homeId,jdbcType=BIGINT},
            </if>
            <if test="payed != null">
                payed = #{payed,jdbcType=BOOLEAN},
            </if>
            <if test="status != null">
